<% include ../partials/header %>

<main role="main" class="new container pt-4">

    <% include ../partials/flash %>

    <div class="pb-2">
        <h3 class="text-center">Modify Park</h3>
        <div class="jumbotron shadow py-3">
            <p>Please make the necessary changes below:</p>
            <form action="/parks/<%= park._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label class="font-weight-bold" for="name">Name</label>
                    <input id="name" type="text" class="form-control" name="park[name]" value="<%= park.name %>" placeholder="Enter park name" required autofocus>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold" for="image">Image</label>
                    <input class="form-control-file" id="image" type="file" name="image" value="<%= park.image %>" accept="image/*">
                </div>
                <div class="form-group">
                    <label class="font-weight-bold" for="location">Location</label>
                    <input id="location" type="text" class="form-control" name="location" value="<%= park.location %>" placeholder="Enter address" required>
                </div>
                <div class="form-group">
                        <label class="font-weight-bold" for="description">Description</label>
                        <textarea id="description" class="form-control" name="park[description]" rows="5" placeholder="Enter park description" required><%= park.description %></textarea>
                    </div>
                <div class="form-group pt-2">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Submit</button>
                    <a href="/parks/<%= park._id %>" class="btn btn-secondary btn-lg btn-block">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</main>

<% include ../partials/footer %>