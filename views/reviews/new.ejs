<% include ../partials/header %>

<main role="main" class="new container pt-4">
    <div class="pb-2">
        <h3 class="text-center">Add a New Review</h3>
        <div class="jumbotron shadow py-3">
            <p>Please rate this park: 
                <span class="font-weight-bold text-success"><%= park.name %></span>
            </p>
            
            <form action="/parks/<%= park._id %>/reviews" method="POST">
                <div class="form-group">
                    <fieldset class="starability-basic form-group" id="rating">
                        <div>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" checked />
                            <label for="first-rate5" title="5 stars - Amazing">
                                <%- '<span class="fa fa-star checked"></span>'.repeat(5) %> <span class="font-italic text-muted">(Amazing)</span>
                            </label>
                        </div>
                        <div>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="4 stars - Very good">
                                <%- '<span class="fa fa-star checked"></span>'.repeat(4) %> <span class="font-italic text-muted">(Very good)</span>
                            </label>
                        </div>
                        <div>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="3 stars - Average">
                                <%- '<span class="fa fa-star checked"></span>'.repeat(3) %> <span class="font-italic text-muted">(Average)</span>
                            </label>
                        </div>
                        <div>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="2 stars - Not good">
                                <%- '<span class="fa fa-star checked"></span>'.repeat(2) %> <span class="font-italic text-muted">(Not good)</span>
                            </label>
                        </div>
                        <div>
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="1 star - Terrible">
                                <%- '<span class="fa fa-star checked"></span>'.repeat(1) %> <span class="font-italic text-muted">(Terrible)</span>
                            </label>
                        </div>
                    </fieldset>
                </div>

                <div class="form-group">
                    <textarea class="form-control" type="text" name="review[text]" placeholder="Write a review for this park..."
                        rows="5"></textarea>
                </div>

                <div class="form-group pt-2">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Submit</button>
                    <a href="/parks/<%= park._id %>" class="btn btn-secondary btn-lg btn-block">Cancel</a>
                </div>
            </form>

        </div>
    </div>
</main>

<% include ../partials/footer %>